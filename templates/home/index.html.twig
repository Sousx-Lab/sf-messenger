{% extends 'base.html.twig' %}

{% block title %}
	SF-Messenger!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="mt-4">
			<h3 class="text-center">TEST Symfony Messenger ðŸ˜ƒ </h3>
             {% for message in app.flashes('success') %}
                <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong> {{message }}</strong>
            </div>    
			<div class="form-group">
                {% endfor %}
				{{ form_start(form)}}
				{{form_label (form.user, 'Users', {'attr': {'class': 'col-sm-2 col-form-label'}}) }}
				{{form_widget(form.user, {'attr': {'class': 'custom-select'}}) }}
				<div class="mt-3">
				<button type="submit" class="btn btn-success">Notifier</button>
				{{form_end(form)}}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
